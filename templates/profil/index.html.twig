{% extends 'base.html.twig' %}

{% block title %}Profil{% endblock %}

{% block body %}

<a href="{{ path('edit_profil', {'id' : app.user.id})}}">Modifier mon profil</a><br>
<a href="{{ path('edit_register', {'id' : app.user.id})}}">Modifier mon compte</a><br>
<a href="{{ path('delete_profil', {'id' : app.user.id})}}">Supprimer mon profil</a><br>
   {{ app.user.pseudo }}<br>
   {{ app.user.sex }}<br>
   {{ app.user.birthday | date('d/m/Y') }}<br>
   <img src="{{ asset('uploads/photoprofil/' ~ app.user.pictureProfil) }}"/><br>
    {# {{dump(app.user.pictureProfil)}} #}

    {% for sport in app.user.sport %}
        {{ sport.titleSport }} <br>
    {% endfor %}

    <br>
    Mes événements<br>
    {% for event in events %}
    {{ event.titleEvent }}<br>
    {{ event.dateEvent | date('d/m/Y à h:i') }}<br>
    {{ event.nbPlaces }}<br>
    {{ event.contentEvent }}<br>

    {{ event.adresse }} à {{ event.ville }} {{ event.cp }}<br>
    <a href="{{ path('show_event', {'id': event.id}) }}">Détails</a>
<br><br>
{% endfor %}    

    <br>
    <a href="#">Ajouter des photos à mon profil</a><br>

{% endblock %}